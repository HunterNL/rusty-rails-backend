{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "test",
			"problemMatcher": [
				"$rustc"
			],
			"group": "test",
			"label": "rust: cargo test"
		},
		{
			"type": "cargo",
			"command": "clippy",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true
			},
			"args": [
				"--",
				"-W",
				"clippy::unwrap_used",
				"-A",
				"clippy::missing-const-for-fn",
				"-A",
				"clippy::unnecessary_wraps",
				"-A",
				"clippy::cast_sign_loss"
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "rust: cargo clippy"
		},
		{
			"type": "cargo",
			"command": "clippy",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true
			},
			"args": [
				"--fix",
				"--",
				"-W",
				"clippy::unwrap_used",
				"-A",
				"clippy::missing-const-for-fn",
				"-A",
				"clippy::unnecessary_wraps",
				"-A",
				"clippy::cast_sign_loss"
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "rust: cargo clippy fix"
		},
		{
			"label": "SSL Proxy",
			"type": "shell",
			"command": "caddy run",
			"problemMatcher": []
		},
		{
			
			"type": "cargo",
			"command": "run",
			"args": ["serve"],
			"problemMatcher": [
				"$rustc"
			],
			"label": "Run backend"
		}
	]
}